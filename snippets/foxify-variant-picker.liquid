{% comment %}
This file is auto-generated by Foxify.
This file can be re-written at any time. Please do not update this file directly.
{% endcomment %}
{% liquid
    if variant_picker_type == nil or variant_picker_type == blank
        assign theme_settings = shop.metafields.foxify.theme_settings.value
        if theme_settings != blank
            assign variant_picker_type = theme_settings['variantPicker'].pickerType
        endif
    endif

    assign picker_type = variant_picker_type

    assign optionsSwatches = shop.metafields.foxify.product-options-swatches.value.options
    assign colorSwatchTrigger = shop.metafields.foxify.product-options-swatches.value.color_swatch_trigger
%}
{%- unless product.has_only_default_variant -%}
<f-variant-picker class="f:variant-picker no-js-hidden" data-update-url="{{ updateUrl | default: false }}" data-product-id="{{ product.id }}" data-section-id="{{ sectionId }}" data-product-handle="{{ product.handle }}" data-url="{{ product.url }}" data-max-options="{{ product.options_with_values.size }}">
    {%- for option in product.options_with_values -%}
        {% liquid
            assign option_name_downcase = option.name | downcase

            if colorSwatchTrigger != blank
                assign colorSwatchTrigger = colorSwatchTrigger | downcase | split: ','
                assign has_color = colorSwatchTrigger | where: option_name_downcase | first
                if has_color != blank
                    assign picker_type = 'color'
                else
                    assign picker_type = variant_picker_type
                endif
            endif
        %}
        <div class="f:variant-picker__field-wrapper">
            {% case picker_type %}
                {% when 'dropdown' %}
                    <div class="f:variant-picker__input f:variant-picker__dropdown" data-field-type="dropdown">
                        <label class="f:form-label" for="Option-{{ sectionId }}-{{ forloop.index0 }}">
                            <span>{{ option.name }}:</span>
                            {% if show_selected_value %}
                                <span class="f:variant-picker__selected-value">{{ option.selected_value }}</span>
                            {% endif %}
                        </label>
                        <select id="Option-{{ sectionId }}-{{ forloop.index0 }}"
                                class="f:form-control"
                                name="options[{{ option.name | escape }}]"
                                form="{{ product_form_id }}"
                        >
                            {%- for value in option.values -%}
                                <option value="{{ value | escape }}" class="f:variant-picker__option" data-value="{{- value | escape -}}" data-option-position="{{ option.position }}" {% if option.selected_value == value %}selected="selected"{% endif %}>
                                    {{- value -}}
                                </option>
                            {%- endfor -%}
                        </select>
                    </div>

                {% when 'color' %}
                    <div class="f:variant-picker__input f:variant-picker__color" data-field-type="button">
                        <label class="f:form-label">
                            <span>{{ option.name }}:</span>
                            {% if show_selected_value %}
                                <span class="f:variant-picker__selected-value">{{ option.selected_value }}</span>
                            {% endif %}
                        </label>
                        <div class="f:variant-picker__option-values">
                            {%- for value in option.values -%}
                                {% assign value_fallback = value | split: ' ' | last | handle %}
                                <div
                                    class="f:variant-picker__option f:tooltip-activator"
                                    data-option-position="{{ option.position }}"
                                    data-option-type="{{ picker_type }}"
                                    data-value="{{- value | escape -}}"
                                    data-fallback-value="{{- value_fallback | downcase -}}"
                                >
                                    <input type="radio" id="{{ sectionId }}-{{ option.position }}-{{ forloop.index0 }}"
                                           name="{{ option.name }}"
                                           value="{{ value | escape }}"
                                           form="{{ product_form_id }}"
                                           {% if option.selected_value == value %}checked{% endif %}
                                    >
                                    <label for="{{ sectionId }}-{{ option.position }}-{{ forloop.index0 }}" class="f:variant-picker__option-button f:variant-picker__option-button--color">
                                        <span class="f:visually-hidden">{{- value -}}</span>
                                    </label>
                                    <span class="f:tooltip">{{ value }}</span>
                                </div>
                            {%- endfor -%}
                        </div>
                    </div>
                {% else %}
                    <div class="f:variant-picker__input f:variant-picker__button" data-field-type="button">
                    <label class="f:form-label">
                        <span>{{ option.name }}:</span>
                        {% if show_selected_value %}
                            <span class="f:variant-picker__selected-value">{{ option.selected_value }}</span>
                        {% endif %}
                    </label>
                    <div class="f:variant-picker__option-values">
                        {%- for value in option.values -%}
                            <div
                                class="f:variant-picker__option"
                                data-option-position="{{ option.position }}"
                                data-option-type="{{ picker_type }}"
                                data-value="{{- value | escape -}}"
                            >
                                <input type="radio" id="{{ sectionId }}-{{ option.position }}-{{ forloop.index0 }}"
                                       name="{{ option.name }}"
                                       value="{{ value | escape }}"
                                       form="{{ product_form_id }}"
                                       {% if option.selected_value == value %}checked{% endif %}
                                >
                                <label for="{{ sectionId }}-{{ option.position }}-{{ forloop.index0 }}" class="f:variant-picker__option-button f:variant-picker__option-button--{{ variant_picker_type }}">
                                    {{- value -}}
                                </label>
                            </div>
                        {%- endfor -%}
                    </div>
                </div>
            {% endcase %}
        </div>
    {%- endfor -%}
    <script type="application/json">
      {{ product.variants | json }}
    </script>
</f-variant-picker>
{%- endunless -%}
